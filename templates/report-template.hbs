<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{report.type}} Report - {{formatDate report.startDate}} to {{formatDate report.endDate}}</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            color: #333;
            margin: 0;
            padding: 20px;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #333;
            padding-bottom: 20px;
        }
        .company-info {
            margin-bottom: 20px;
        }
        .report-info {
            background-color: #f9f9f9;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .summary-card {
            background-color: #f5f5f5;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        .table th {
            background-color: #f2f2f2;
        }
        .footer {
            margin-top: 50px;
            text-align: center;
            font-size: 12px;
            color: #666;
        }
        .badge {
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{report.type}} Report</h1>
        <div class="company-info">
            <h2>{{company.name}}</h2>
            <p>{{company.address}}</p>
            <p>Phone: {{company.phone}} | Email: {{company.email}}</p>
        </div>
    </div>

    <div class="report-info">
        <p><strong>Period:</strong> {{formatDate report.startDate}} to {{formatDate report.endDate}}</p>
        <p><strong>Report Type:</strong> {{report.type}}</p>
        <p><strong>Generated On:</strong> {{generatedAt}}</p>
        {{#if report.generatedBy}}<p><strong>Generated By:</strong> {{report.generatedBy}}</p>{{/if}}
    </div>

    {{#if report.data.summary}}
    <div class="summary-card">
        <h3>Summary</h3>
        {{#each report.data.summary}}
        <p><strong>{{@key}}:</strong>
            {{#if (eq @key 'totalRevenue' 'totalCost' 'totalProfit' 'averageOrderValue')}}
            ${{formatCurrency this}}
            {{else if (eq @key 'averageProfitMargin' 'lowStockPercentage' 'profitabilityRate')}}
            {{formatCurrency this}}%
            {{else}}
            {{this}}
            {{/if}}
        </p>
        {{/each}}
    </div>
    {{/if}}

    {{#if report.data.ordersByStatus}}
    <h3>Orders by Status</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Status</th>
                <th>Count</th>
            </tr>
        </thead>
        <tbody>
            {{#each report.data.ordersByStatus}}
            <tr>
                <td><span class="badge" style="background-color: {{getStatusColor this.status}}; color: white;">{{this.status}}</span></td>
                <td>{{this.count}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{/if}}

    {{#if report.data.topPerformingVehicles}}
    <h3>Top Performing Vehicles</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Vehicle</th>
                <th>Revenue</th>
                <th>Cost</th>
                <th>Profit</th>
                <th>Margin</th>
            </tr>
        </thead>
        <tbody>
            {{#each report.data.topPerformingVehicles}}
            <tr>
                <td>{{this.vehicle}}</td>
                <td>${{formatCurrency this.revenue}}</td>
                <td>${{formatCurrency this.cost}}</td>
                <td>${{formatCurrency this.profit}}</td>
                <td>{{formatCurrency this.profitMargin}}%</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{/if}}

    <div class="footer">
        <p>Generated by Auto Parts Store Reporting System</p>
        <p>Page 1 of 1</p>
    </div>
</body>
</html>