<!-- templates/email/layout.hbs -->
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{title}}</title>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            color: #222;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 16px;
        }

        .card {
            border: 1px solid #eee;
            border-radius: 8px;
            padding: 24px;
        }

        .button {
            display: inline-block;
            padding: 10px 16px;
            background: #2563eb;
            color: #fff !important;
            text-decoration: none;
            border-radius: 6px;
        }

        .muted {
            color: #666;
            font-size: 12px;
        }

        .footer {
            margin-top: 24px;
            border-top: 1px solid #eee;
            padding-top: 12px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="card">
            {{{body}}}
            <div class="footer">
                <p class="muted">This is an automated message from Car Parts Shop.</p>
            </div>
        </div>
    </div>
</body>

</html>