# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=Car Parts Shop API
APP_VERSION=1.0.0

# Database Configuration (Supabase/PostgreSQL)
DB_HOST=your_database_host
DB_PORT=6543
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password
DB_NAME=your_database_name

# Supabase Configuration
SUPABASE_DATABASE_URL=your_supabase_database_url
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=car-parts-shop
JWT_AUDIENCE=car-parts-shop-users

# Authentication Configuration
SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
SESSION_TIMEOUT=1800000

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=car_parts_shop
CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_app_password
EMAIL_TEMPLATE_DIR=src/templates/email

# SMS Configuration
SMS_PROVIDER=africasTalking
AFRICAS_TALKING_API_KEY=your_africas_talking_api_key
AFRICAS_TALKING_USERNAME=your_africas_talking_username
AFRICAS_TALKING_FROM=CARPARTS

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Pagination
DEFAULT_PAGINATION_LIMIT=10
MAX_PAGINATION_LIMIT=100

# Swagger Configuration
SWAGGER_TITLE=Car Parts Shop API
SWAGGER_DESCRIPTION=API documentation for Car Parts Shop
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=api-docs

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Default Email Settings
DEFAULT_FROM_EMAIL=noreply@carpartsshop.com
DEFAULT_FROM_NAME=Car Parts Shop
